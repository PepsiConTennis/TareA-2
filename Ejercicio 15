#include <stdio.h>

void lista(int arr[], int n)

{

for (int i = 0; i < n; i++)

{

printf("Escribe el numero %d: ", i + 1);

scanf("%d", &arr[i]);

}

}

void pin(int arr[], int n)

{

int pares = 0, impares = 0, nulos = 0;

for (int i = 0; i < n; i++)

{

if (arr[i] > 0)

{

nulos++;

}

else 

{

if (arr[i] < 0)

{

pares++;

}

else

{

impares++;

}

}

}

printf("\nConclusion\n");

printf("Negativos: %d\n", pares);

printf("Positivos: %d\n", impares);

printf("Nulos: %d\n", nulos);

}

int main()

{

int n;

printf("¿Cuántos números?: ");

scanf("%d", &n);

int arr[n];

lista(arr, n);

pin(arr, n);

return 0;

}

