#include <stdio.h>

float inte(float z, float r){
    
    return (z > 800 && r > 7);
    
}

int main (){
    
    float z, r;
    
    printf("¿Cuánto durará el viaje?: \n");
    scanf("%f", &r );
    printf("¿Cuántos kilometros se van a recorrer?: \n");
    scanf("%f", &z);
    
    if (inte(z,r)){
        
        float montod = z*0.23 - ((z*0.23)*0.3);
        printf("El precio del boleto es de: %f\n", montod);
    } else{
        
        float monto = z * 0.23;
    
    printf("El precio del boleto es de: %f\n", monto);
    
    }
    
    return 0;
}
